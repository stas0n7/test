<body>
  <div class="container">
    <div class="row">
      <div class="col-md-5 mx-auto">
      <div id="first">
        <div class="myform form ">
          <div class="logo mb-3">
            <div class="col-md-12 text-center">
              <h1>Login</h1>
            </div>
          </div>
          <div>
            <% if flash[:error].present? %>
              <div class="alert alert-danger">
                <%= flash[:error] %>
              </div>
            <% end %>
          </div>
            <%= form_with url: '/sign_in', method: :post do |form| %>
              <div class="form-group">
                <%= form.email_field :email, class: "form-control", id: "email", placeholder: "Enter email" %>
              </div>
              <div class="form-group">
                <%= form.password_field :password, id: "password",  class: "form-control", placeholder: "Enter Password" %>
              </div>
              <div class="col-md-12 text-center ">
                <%= form.submit "Login", class: " btn btn-block btn-primary tx-tfm" %>
              </div>
            <% end %>
      </div>
      </div>
		</div>
  </div>
</body>
